@model CRS_Portal.Models.ClosedAccountDetailsModel
@{
    ViewData["Title"] = "Closed Account Details";
}
    
<partial name="_PageTitle" />`

<div id="AccountStatus">
    <div class="card">
        <div class="card-header card-header-primary bg-TelegramSingle" style="display:inline !important;">
            <h4 class="card-title ">Closed Account Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3" id="dvSCVABDType2" style="border-right: 2px solid #ccc;">
                    <h5 class="card-title">Manual Input</h5><br />
                    <button class="btn btn-primary mr-2 btn-lg" id="btnAddClosedAccountDetails"><i class="fas fa-plus"></i>  Add Closed Account Details </button>
                </div>
                <div class="col-md-9" id="dvSCVCType2">
                    <h5 class="card-title">Bulk Import</h5><br />
                    @*<a class="btn btn-primary mr-2 btn-lg" href="@Url.Action("DownloadSCVAcctStsCodeTemplate", "AccountStatusCode")"><i class="fas fa-file-download"></i>  Download Closed Account Details Template file</a>*@
                    <button class="btn btn-primary mr-2 btn-lg" id="btnUploadAcctStsCodeDet" onclick="BulkUploadClosedAccountDetails()"><i class="fas fa-upload"></i>  Bulk Upload Closed Account Details</button>
                </div>
            </div>
        </div>
    </div>

    <br />
    <partial name="_MessageDiv" />

    <div class="row" id="bulkClosedAccountDetailsUpload" style="display:none;">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="close clsDv" data-dismiss="bscu" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h5 class="card-title">Upload Closed Account Details File</h5>
                    <br />

                    <div class="row">
                        <div class="col-md-3" style="padding-top:1%">
                            <div class="checkbox checkbox-success checkbox-inline">
                                <input type="checkbox" name="deleteExistRecord" id="deleteExistRecord" value="option1">
                                <label for="deleteExistRecord">  Delete All Existing Closed Account Details? </label>
                            </div>
                        </div>
                        <div class="col-md-9">

                            <div id="dropContainer_SCV_ClosedAccountDetails" class="custom-file">
                                <span class="btn btn-primary btn-file btn-lg">
                                    Upload Closed Account Details file<input type="file" name="files" id="file_upload_CRS_ClosedAccountDetails" accept=".xls,.xlsx" onchange="uploadFile()">
                                </span>
                                <span id="fileName"></span>
                                <br>
                                <br>
                                <div class="mb-3 progress" id="fileUploadPgbar" style="display:none;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         id="progressBar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <br />
                    <button id="btnUploadClosedAccountsDetails" class="btn btn-primary mr-2 btn-lg" data-url='@Url.Action("ClosedAccountDetailsFileUpload","ClosedAccountDetails")'
                            onclick="uploadFiles_ClosedAccountDetails();">
                        Upload
                    </button>
                    <button id="btnUploadCancel" class="btn btn-outline-primary btn-lg"
                            onclick="clearUploadFileValue();">
                        Reset
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary bg-TelegramSingle" style="display:inline !important;">
                    <h4 class="card-title ">
                        Closed Account Details
                        <div class="" style="float:right;">
                            <span class="col-md-12">
                                <span style="font-size:small;">Export Data To : </span>
                                <a id="AccStsExport" class="ExlExport">
                                    <img src="data:image/png;base64,">
                                    <span style="color:black;">
                                        XLSX
                                    </span>
                                </a>
                            </span>
                        </div>
                    </h4>
                    <div class="card-category" style="text-transform:lowercase !important;">Please use action icon edit/delete to update Closed Account Details</div>
                </div>
                <div class="card-body" id="dvAcctStsCode">
                    <div class="table-responsive">
                        <div style="width:100%; margin:0 auto;">
                            <table id="ClosedAccountDetailsGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" style="display:none;">
                                <thead>
                                    <tr>
                                        <th style="width:2%">ID</th>
                                        <th style="width:14%">Deal Number</th>
                                        <th style="width:14%">Deal Date</th>
                                        <th style="width:14%">Customer Number</th>
                                        <th style="width:14%">Customer Name</th>
                                        <th style="width:14%">Principal Amount</th>
                                        <th style="width:14%">Interest Amount</th>
                                        <th style="width:14%">Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>Deal Number</th>
                                        <th>Deal Date</th>
                                        <th>Customer Number</th>
                                        <th>Customer Name</th>
                                        <th>Principal Amount</th>
                                        <th>Interest Amount</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input id="btnLoadClosedAccountDetailsGrid" value="Load" type="hidden" data-url='@Url.Action("LoadClosedAccountDetails","ClosedAccountDetails")' />
    <input id="btnClosedAccountDetailsDeleteAll" value="deleteAll" type="hidden" data-url='@Url.Action("DeleteAllClosedAccountDetails","ClosedAccountDetails")' />
    <input id="btnClosedAccountDetailsDelete" value="delete" type="hidden" data-url='@Url.Action("DeleteClosedAccountDetails","ClosedAccountDetails")' />
    <input id="btnClosedAccountDetailsEdit" value="edit" type="hidden" data-url='@Url.Action("LoadClosedAccountDetailsByID","ClosedAccountDetails")' />
    <input id="btnClosedAccountDetailsSave" value="save" type="hidden" data-url='@Url.Action("SaveClosedAccountDetails","ClosedAccountDetails")' />

    <div class="modal fade bd-example-modal-lg" id="modalClosedAccountDetails" data-backdrop="true" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" style="word-wrap:break-word">
        <div class="modal-dialog modal-lg" role="document" style="max-width:1000px">
            @Html.Partial("AddClosedAccount", Model)
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>
<style>
    /*move tfoot to next to grid header*/
    tfoot {
        display: table-header-group;
    }
</style>

<script>

    $(document).ready(function () {
        $("#pageTitle").text("Closed Account Details");
        LoadClosedAccountDetailsGrid();

        $('#btnAddClosedAccountDetails').click(function () {
            LoadClosedAccountData();
        });
    });

    function LoadClosedAccountDetailsGrid() {
        spinner_On();
        $.ajax(
            {
                "url": $("#btnLoadClosedAccountDetailsGrid").data('url'),
                "type": "POST",
                "dataType": "json",
                success: function (data) {
                    console.log(data);
                    $('#ClosedAccountDetailsGrid').show();
                    var datatableInstance = $('#ClosedAccountDetailsGrid').DataTable({
                        data: data,
                        paging: true,
                        bDestroy: true,
                        processing: true,
                        pageLength: 10,
                        order: [[2, "asc"]],
                        columns: [
                            { 'data': 'ID', "visible": false, },
                            { 'data': 'DealNo' },
                            { 'data': 'DealDt' },
                            { 'data': 'CustNo' },
                            { 'data': 'CustName' },
                            { 'data': 'PrincipalAmt' },
                            { 'data': 'InterestAmtPaid' },
                            {
                                'data': '',
                                'sortable': false,
                                'render': function json(data, type, full, meta) {
                                    return "<i  class='fas fa-edit edit' style='cursor:pointer;' onclick=LoadClosedAccountData('" + full.ID + "');></i>"
                                        + " " + "<i class='fas fa-trash-alt delete' style='padding-left: 7px; color:#ff0000a1; cursor:pointer;'  onclick=DeleteClosedAccountDetailsData('" + full.ID + "','" + full.CustNo + "'); ></i >";
                                }
                            },
                        ]
                    });
                    console.log("Table done");

                    // To decide it's textbox or Select Filter
                    $("#ClosedAccountDetailsGrid tfoot th").each(function (i) {
                        var title = $('#ClosedAccountDetailsGrid thead th').eq($(this).index()).text();
                        if (title == "Deal Number" || title == "Deal Date" || title == "Customer Number" || title == "Customer Name" || title == "Principal Amount" || title == "Interest Amount") {
                            $(this).html('<div class="search"><input type="text" class="form-control" placeholder="Search ' + title + '"></div>');
                        }
                        else {
                            $(this).html('<input type="button" class="btn btn-primary" value="Clear" onclick="clearSearch()"/>');
                        }
                    });

                    // Filter : Textbox keyup Action...
                    datatableInstance.columns().every(function () {
                        var dataTableColumn = this;
                        $(this.footer()).find('input').on('keyup change', function () {
                            //console.log(this.value);
                            dataTableColumn.search(this.value).draw();
                        });
                    });
                    spinner_Off();
                },
                error: function (json) {
                    spinner_Off();
                }
            });
    }

    function clearSearch() {
        var table = $("#ClosedAccountDetailsGrid").DataTable();
        table.search('').columns().search('').draw();

        $(".search input[type='text']").val("");
    }

    function BulkUploadClosedAccountDetails() {
        hideSuccessErrorDiv();
        clearUploadFileValue();
        $("#bulkClosedAccountDetailsUpload").show();
    }

    function clearUploadFileValue() {
        $("#file_upload_CRS_ClosedAccountDetails").val("");
        hideSuccessErrorDiv();
        ResetFileUplod();
        $("#deleteExistRecord").prop("checked", false);
    }

    function uploadFiles_ClosedAccountDetails() {
        if ($("#deleteExistRecord").prop('checked') == true) {
            DeleteAllClosedAccountDetails();
        }
        else {
            fileUpload_ClosedAccountDetails();
        }
    }

    function DeleteAllClosedAccountDetails() {
        $.ajax(
            {
                url: $("#btnClosedAccountDetailsDeleteAll").data('url'),
                type: "POST",
                success: function (result) {
                    if (result.success == true) {
                        fileUpload_ClosedAccountDetails();
                    }
                    else {
                        enableErrorDiv(result.message);
                        return false;
                    }
                }
            }
        );
    }

    function fileUpload_ClosedAccountDetails() {
        var input = document.getElementById("file_upload_CRS_ClosedAccountDetails");
        var files = input.files;
        var formData = new FormData();

        for (var i = 0; i != files.length; i++) {
            formData.append("files", files[i]);
        }
        if (files.length == 0) {
            enableErrorDiv("Please select the file");
        }
        else {
            ajaxPost4ClosedAccountDetailsUpload(formData);
        }
    }

    function ajaxPost4ClosedAccountDetailsUpload(formData) {
        $.ajax(
            {
                url: $("#btnUploadClosedAccountsDetails").data('url'),
                data: formData,
                processData: false,
                contentType: false,
                type: "POST",
                success: function (result) {
                    if (result.success == true) {
                        enableSucessDiv(result.message);
                        LoadClosedAccountDetailsGrid();
                        $("#bulkClosedAccountDetailsUpload").hide();

                    }
                    else {
                        enableErrorDiv(result.message);
                        return false;
                    }
                }
            }
        );
    }

    function uploadFile() {
        var file = _("file_upload_CRS_ClosedAccountDetails").files[0];
        var _fileName = file.name;
        var extension = _fileName.substr((_fileName.lastIndexOf('.') + 1))
        if (extension == 'xls' || extension == 'xlsx') {
            var filesize = formatBytes(file.size, 4);
            $("#fileName").html(file.name + " (" + filesize + ") ");
            var formdata = new FormData();
            formdata.append("file_upload_CRS_ClosedAccountDetails", file);
            var ajax = new XMLHttpRequest();
            ajax.upload.addEventListener("progress", progressHandler, false);
            ajax.addEventListener("load", completeHandler, false);
            ajax.addEventListener("error", errorHandler, false);
            ajax.addEventListener("abort", abortHandler, false);
            ajax.open("POST", "e");
            ajax.send(formdata);
        }
    }

    $("#file_upload_CRS_ClosedAccountDetails").change(function () {
        var fileName = $(this).val().split("\\").pop();
        var extension = fileName.substr((fileName.lastIndexOf('.') + 1))
        if (extension == 'xls' || extension == 'xlsx') {
            $(this).next('.custom-file-label').html(fileName);
        }
        else {
            clearUploadFileValue();
            alertify.alert('SCV Portal', "Please upload valid file format")
        }
    });

    $('.clsDv').on("click", function () {
        $(this).parent().parent().parent().parent().hide();
    });

    function DeleteClosedAccountDetailsData(id, custno) {
        hideSuccessErrorDiv();
        $("#bulkClosedAccountDetailsUpload").hide();
        alertify.confirm('CRS Portal', 'Do you want to delete customer number - "' + custno + '" \'s Closed Account Details?',
            function () { DeleteClosedAccountDetail(id); }
            , function () { });
    }

    function DeleteClosedAccountDetail(id) {
        $.ajax(
            {
                type: 'POST',
                data: { "id": id },
                url: $("#btnClosedAccountDetailsDelete").data('url'),
                success: function (json) {
                    if (json.success == true) {
                        LoadClosedAccountDetailsGrid();
                        enableSucessDiv(json.message);
                    }
                    else {
                        enableErrorDiv(json.message);
                    }
                }
            });
    }

    function LoadClosedAccountData(ID) {
        $.ajax(
            {
                type: 'GET',
                data: { "id": ID },
                url: $("#btnClosedAccountDetailsEdit").data('url'),
                success: function (result) {
                    $("#modalClosedAccountContent").html(result);
                    $('#modalClosedAccountDetails').modal('show');
                }
            });

    }

    function SaveClosedAccountData() {
        console.log($("#frmClosedAccDetails").serialize());
        $.ajax(
            {
                type: 'POST',
                data: $("#frmClosedAccDetails").serialize(),
                url: $("#btnClosedAccountDetailsSave").data('url'),
                success: function (json) {
                    if (json.success == true) {
                        enableSucessDiv(json.message);
                        LoadClosedAccountDetailsGrid();
                        $('#modalClosedAccountDetails').modal('hide');
                    }
                    else {
                        enableErrorDiv(json.message);
                    }
                }
            });
    }

</script>